<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/top_nav_background</item>
        <item name="colorAccent">@color/top_nav_background</item>

        <item name="android:listDivider">@drawable/brand_grid_divider</item>

    </style>

    <style name="TextViewBottomBar">
        <item name="android:textColor">@color/main_textcolor_selector</item>
        <item name="android:textSize">@dimen/textsize_10</item>
        <item name="android:checkable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">3dp</item>
    </style>

    <style name="FullScreenStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--隐藏启动变化-->
        <item name="android:windowBackground">@drawable/icon_welcome</item>
    </style>

    <style name="CustomTabAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textsize_13</item>
    </style>

</resources>
